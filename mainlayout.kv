
<MainLayout>
    orientation:"vertical"
    background:"images/bk2.jpg"
    ActionBar:
        ActionView:
            background_image:"images/im2.png"

            ActionPrevious:

                app_icon: "images/gamepad3.png"
                title: 'Tic Tac Toc'
                color: [1,1,0,1]
                text_size: 20
                bold:True
                with_previous: False

                ActionButton:
                    text:"Exit"
                    icon:"images/menu_exit.png"
                    color: [1,0,0,0]
                    bold:True
                    on_press:app.stop()

                ActionButton:
                    icon:"images/regame.png"
                    text: 'Another Game'
                    bold:True
                    id: resetgame
                    color: [0,.8,1,1]

                ActionButton:

                    text: 'Settings'
                    icon:"images/menu_pref.png"
                    on_press:app.open_settings()
                    color: [0,.8,1,1]

            ActionOverflow:
                overflow_image:"images/menu_list.png"

                ActionButton:
                    text: 'About'
                    mipmap:True
                    icon:"images/menu_pref.png"
                    color: [0,.8,1,1]
                    on_press:root.author()

                ActionButton:
                    text: 'Special Keys'
                    on_press:root.keyspop()
                    color: [0,.8,1,1]

                ActionButton:
                    text: 'Control'
                    on_press:root.control()
                    color: [0,.8,1,1]

